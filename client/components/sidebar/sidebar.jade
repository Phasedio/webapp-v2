.sidebar(ng-controller='SidebarController')

    .sidebar-content
        img(src="assets/images/phased.png" width="61px")
        ul
            li(ng-repeat='item in sidebar.menu', ng-if='!item.hideCondition' ng-class='{active: sidebar.isActive(item.link)}')
                a(ng-href='{{item.link}}') {{item.title}}
                
        .sidebar-bottom
            h4 Add member
            h4 Switch teams
            h4 Logout        