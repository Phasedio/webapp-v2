header#banner.hero-unit
  .container(ng-if="!$ctrl.Phased.authData")
    h1 'Allo, 'Allo!
    p.lead Kick-start your next web app with Angular Fullstack
    img(src='assets/images/yeoman.png', alt='I\'m Yeoman')
  .container(ng-if="$ctrl.Phased.authData")
    h1 {{$ctrl.Phased.team.details.name}}
    p.lead Currently logged in as {{$ctrl.Phased.user.name}}

.container
  .row
    .col-lg-12(ng-if='!$ctrl.Phased.authData')
      h1.page-header Features:
      ul.nav.nav-tabs.nav-stacked.col-md-4.col-lg-4.col-sm-6(ng-repeat='thing in $ctrl.awesomeThings')
        li
          a(href='#', uib-tooltip='{{thing.info}}')
            | {{thing.name}}
    .col-lg-12(ng-if='$ctrl.Phased.authData')
      h1.page-header {{::$ctrl.Phased.team.name}}
      ul.nav.nav-tabs.nav-stacked.col-md-4.col-lg-4.col-sm-6
        li(ng-repeat="member in $ctrl.Phased.team.members")
          p
            img(ng-src="{{member.gravatar}}")
            {{member.name}}